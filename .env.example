# Environment Configuration
NODE_ENV=development
PORT=8080

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/meethere

# Redis Configuration (Optional for development)
REDIS_URL=redis://localhost:6379

# AWS Configuration (Production)
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
DYNAMODB_TABLE_NAME=meethere-main
DYNAMODB_ENDPOINT=

# External APIs
KAKAO_API_KEY=your_kakao_rest_api_key
KAKAO_ADMIN_KEY=your_kakao_admin_key

# Authentication
JWT_SECRET=your_super_secret_jwt_key_min_32_characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MAX_REQUESTS_AUTH=1000

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,https://meethere.kr

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/app.log

# Monitoring
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics

# Feature Flags
ENABLE_REDIS_CACHE=true
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=true
ENABLE_METRICS=true